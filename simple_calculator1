#include <stdio.h>
int main(){
    printf("1 for +\n");
    printf("2 for -\n");
    printf("3 for *\n");
    printf("4 for /\n");

    int a;
    printf("write a number : ");
    scanf("%d", &a);

    float b, c, d, e, f, j;

    scanf("%f", &b);
    scanf("%f", &c);

    if (a == 1){
        d = b + c;
        printf("the result is = %.2f\n", d);
    }
    else if (a == 2){
        e = b - c;
        printf("the result is = %.2f\n", e);
    }
    else if (a == 3){
        f = b * c;
        printf("the result is = %.2f\n", f);
    }
    else if ( a == 4){
        j = b / c;
        printf("the result is = %.2f\n", j);
    }
    else {
        printf("error\n");
    }
    return 0;
}
